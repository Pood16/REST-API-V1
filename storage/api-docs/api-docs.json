    "components": {
        "schemas": {
            "Image": {
                "title": "Product Image",
                "description": "Image model for a product",
                "required": [
                    "id",
                    "product_id",
                    "image_url",
                    "is_primary"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "product_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "image_url": {
                        "type": "string",
                        "example": "products/image1.jpg"
                    },
                    "is_primary": {
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "Product": {
                "title": "Product",
                "description": "Product model",
                "required": [
                    "id",
                    "name",
                    "slug",
                    "price",
                    "stock",
                    "category_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "PlayStation 5"
                    },
                    "slug": {
                        "type": "string",
                        "example": "playstation-5"
                    },
                    "description": {
                        "type": "string",
                        "example": "Next-gen gaming console"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 499.99
                    },
                    "stock": {
                        "type": "integer",
                        "example": 15
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 2
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Image"
                        }
                    }
                },
                "type": "object"
            }
        }
